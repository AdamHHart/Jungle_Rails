


<section class="orders-show">

  <header class="page-header">
    <h1>Your Orders</h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for shopping with us!, <%= @order.email %>!</h4>
  </div>


  <h4>Order Summary</h4>
  <div class="panel panel-default items" >
    <table class="table table-bordered table table-striped" >
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <%= render 'order', product: item.product, quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%=humanized_money_with_symbol  @order.total_cents%>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Buy more stuff!", root_path, class: 'btn btn-lg btn-primary' %>


</section>
